<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/std"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="60dp"
        android:text="기준위젯" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/std"
        android:layout_above="@+id/std"

        android:text="3" />

    <Button
        android:id="@+id/button5"
        android:layout_toLeftOf="@+id/std"
        android:layout_alignTop="@+id/std"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3" />

    <Button
        android:id="@+id/button6"
        android:layout_alignBaseline="@+id/std"
        android:layout_toLeftOf="@+id/std"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/std"
        android:layout_toLeftOf="@+id/std"
        android:text="1" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/std"
        android:layout_alignRight="@+id/std"
        android:text="4" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/std"
        android:layout_alignBottom="@+id/std"
        android:text="6" />

    <Button
        android:id="@+id/button10"
        android:layout_toRightOf="@+id/std"
        android:layout_above="@+id/std"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="5" />
</RelativeLayout>